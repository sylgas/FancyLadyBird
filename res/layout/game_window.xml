<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connected_with_msg"
            android:id="@+id/textViewConnectedWith" android:layout_gravity="left|center_vertical" android:textSize="20dp"
            android:layout_row="0" android:layout_column="0"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_game_button"
            android:id="@+id/endGameButton" android:layout_gravity="center|bottom"
            android:textSize="@dimen/menu_button_text_size"
            android:onClick="finishActivity" android:layout_row="1" android:layout_column="0"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_row="1" android:layout_column="4">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Left"
                android:id="@+id/button3" android:layout_row="1" android:layout_column="1"
                android:onClick="goLeft"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Down"
                android:id="@+id/button" android:layout_row="1" android:layout_column="2"
                android:onClick="goDown"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Up"
                android:id="@+id/button1" android:layout_row="0" android:layout_column="2"
                android:onClick="goUp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right"
                android:id="@+id/button2" android:layout_row="1" android:layout_column="3"
                android:layout_marginRight="10dp"
                android:onClick="goRight"/>
    </LinearLayout>
</GridLayout>